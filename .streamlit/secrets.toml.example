# ============================================================================
# Streamlit Secrets Configuration Template
# ============================================================================
# 
# This file serves as a template for configuring application secrets.
# 
# IMPORTANT SECURITY NOTES:
# 1. NEVER commit the actual secrets.toml file to version control
# 2. This .example file should contain placeholder values only
# 3. When deploying to Streamlit Cloud, add these secrets through the web UI
# 4. For local development, copy this file to secrets.toml and fill in real values
#
# ============================================================================

# Google Service Account Credentials
# Create a service account in Google Cloud Console and download the JSON key
[google_service_account]
type = "service_account"
project_id = "YOUR_PROJECT_ID"
private_key_id = "YOUR_PRIVATE_KEY_ID"
private_key = "-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
client_email = "YOUR_SERVICE_ACCOUNT_EMAIL@YOUR_PROJECT.iam.gserviceaccount.com"
client_id = "YOUR_CLIENT_ID"
auth_uri = "https://accounts.google.com/o/oauth2/auth"
token_uri = "https://oauth2.googleapis.com/token"
auth_provider_x509_cert_url = "https://www.googleapis.com/oauth2/v1/certs"
client_x509_cert_url = "YOUR_CERT_URL"

# Google Drive Root Folder ID
# This is the ID of the root folder containing all accelerometer folders
# You can find this in the folder's URL: https://drive.google.com/drive/folders/FOLDER_ID_HERE
root_folder_id = "YOUR_ROOT_FOLDER_ID"

# Google Sheets Allowlist Configuration
# The Sheet ID from the Google Sheets URL
allowlist_sheet_id = "YOUR_ALLOWLIST_SPREADSHEET_ID"

# The range in the sheet containing email addresses (e.g., "Sheet1!A:A")
allowlist_range = "Sheet1!A:A"
